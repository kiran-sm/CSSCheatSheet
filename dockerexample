# Use Node.js 22 (or later) for building the app
FROM node:22 as build

# Set environment variables for the API endpoint
# This is where the frontend will look for the backend API
# ENV VITE_API_ENDPOINT=https://riosmvp-va-backend.azurewebsites.net
ENV VITE_API_ENDPOINT=https://rios-dev-new-va-backend.azurewebsites.net 

# PBI Dashboard URL
# test
ENV VITE_PBI_DASHBOARD_URL=https://app.powerbi.com/links/DvvkzLkMLH?ctid=0da2a83b-13d9-4a35-965f-ec53a220ed9d&pbi_source=linkShare
#mvp
# ENV VITE_PBI_DASHBOARD_URL=https://app.powerbi.com/links/ux97D5VQRZ?ctid=c787ee49-7d95-427d-b017-94254264feb0&pbi_source=linkShare

# Set the working directory
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the rest of the application code
COPY . .

# Ensure Vite has execute permissions
RUN chmod +x node_modules/.bin/vite 

# Build the app for production
RUN npm run build

# Use nginx to serve the app
FROM nginx:alpine
COPY --from=build /app/dist /usr/share/nginx/html

# Remove the default Nginx config
RUN rm /etc/nginx/conf.d/default.conf

# Copy the Nginx configuration file
# COPY nginx.conf /etc/nginx/nginx.conf
COPY nginx.conf /etc/nginx/conf.d/default.conf


EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
